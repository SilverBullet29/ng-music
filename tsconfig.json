{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsxImportSource": "react",
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@components": ["components/"],
      "@components/*": ["components/*"],
      "@pages": ["pages/"],
      "@pages/*": ["pages/*"],
      "@layouts": ["layouts/"],
      "@layouts/*": ["layouts/*"],
      "@infra/*": ["infra/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"],
      "@style/*": ["style/*"],
      "@hooks": ["hooks/"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.js",
    "**/**/*.tsx",
    "postcss.config.cjs"
  ],
  "exclude": ["node_modules"]
}
